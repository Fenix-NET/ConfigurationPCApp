                                <a asp-controller="Catalog" asp-action="GetAllGpu">Видеокарты</a>
                                <a asp-controller="Catalog" asp-action="GetAllMotherboard">Материнские платы</a>
                                <a asp-controller="Catalog" asp-action="GetAllRam">Оперативная память</a>
                                <a asp-controller="Catalog" asp-action="GetAllHdd">Жесткие диски</a>
                                <a asp-controller="Catalog" asp-action="GetAllSsd">SSD</a>
                                <a asp-controller="Catalog" asp-action="GetAllPsu">Блоки питания</a>
